@model  GOLDEN_MANAGER.Models.Motivation

<!-- Modal -->
<div class="modal fade" id="addMotivationModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Donate for the motivation</h4>            
    </div>
             
      @using (Ajax.BeginForm("Add", "Motivation",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(x => x.mot_name, new { @class = "form-control", @placeholder = "Enter the name of motivation" })
                    </div>

                    <div class="form-group">
                        <label>Date:</label>
                        @Html.TextBoxFor(x => x.mot_dead_line, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Money:</label>
                        @Html.TextAreaFor(x => x.mot_cash, new { @class = "form-control", @placeholder = "Enter the amount of money" })
                    </div>

                    <div class="form-group">
                        <label>Task id:</label>
                        @Html.TextAreaFor(x => x.task.task_id, new { @class = "form-control", @placeholder = "Enter the ID of task" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeMotivationDayForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type="text/javascript">

    $("#closeMotivationDayForm").click(function () {
        $("#addMotivationModal").modal().hide();
        $('#addMotivationModal').modal('toggle');
});
             
</script>
