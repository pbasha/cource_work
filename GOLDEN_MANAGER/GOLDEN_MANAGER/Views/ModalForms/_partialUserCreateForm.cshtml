@using GOLDEN_MANAGER.Models
@model User
  
   <!-- Modal -->
<div class="modal fade" id="addUserModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Registration</h4>            
    </div>
             
      @using (Ajax.BeginForm("Registration", "User",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(x => x.user_name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Email:</label>
                        @Html.TextBoxFor(x => x.user_email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Password:</label>
                        @Html.PasswordFor(x => x.user_password, new { @class = "form-control" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeCreateUserForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type = "text/javascript" >
    $("#closeCreateUserForm").click(function () {
    $("#addUserModal").modal().hide();
    $('#addUserModal').modal('toggle');
});
             
</script>
