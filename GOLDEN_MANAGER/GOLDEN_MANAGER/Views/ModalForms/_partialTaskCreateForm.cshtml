@using GOLDEN_MANAGER.Models
@model GOLDEN_MANAGER.Models.Task
  
   <!-- Modal -->
<div class="modal fade" id="addTaskModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Creating new task</h4>            
    </div>
             
      @using (Ajax.BeginForm("Add", "Task",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label><br/>
                        @Html.EditorFor(x => x.task_name, new { @class = "form-control", @placeholder = "Enter the name of skill" })
                    </div>

                    <div class="form-group">
                        <label>Prioriry:</label><br />
                        @Html.EditorFor(x => x.task_priority, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Description:</label><br />
                        @Html.EditorFor(x => x.task_description, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Point for completing:</label><br />
                        @Html.EditorFor(x => x.task_achiv_points, new { @class = "form-control" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeCreateTaskForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type = "text/javascript" >

    $("#closeCreateTaskForm").click(function () {
    $("#addTaskModal").modal().hide();
    $('#addTaskModal').modal('toggle');
});
             
</script>
