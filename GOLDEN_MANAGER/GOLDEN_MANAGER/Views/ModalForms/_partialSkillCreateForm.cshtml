@using GOLDEN_MANAGER.Models
@model Skill
  
   <!-- Modal -->
<div class="modal fade" id="addSkillModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Creating Skill</h4>            
    </div>
             
      @using (Ajax.BeginForm("Add", "Skill",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.EditorFor(x => x.skill_name, new { @class = "form-control", @placeholder = "Enter the name of skill" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeCreateSkillForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type = "text/javascript" >

    $("#closeCreateSkillForm").click(function () {
    $("#addSkillModal").modal().hide();
    $('#addSkillModal').modal('toggle');
});
             
</script>
