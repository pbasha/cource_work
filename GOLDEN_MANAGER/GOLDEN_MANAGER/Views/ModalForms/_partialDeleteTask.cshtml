@using GOLDEN_MANAGER.Models
@model GOLDEN_MANAGER.Models.Task

<!-- Modal -->
<div class="modal fade" id="deleteTaskModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete existing task</h4>
            </div>

            @using (Ajax.BeginForm("Delete", "Task",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
            {
                <div class="modal-body">

                    <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(x => x.task_name, new { @class = "form-control", @placeholder = "Enter the name of task" })
                    </div>

                </div>

                <div class="modal-footer">
                    <input id="closeDeleteTaskForm" type="submit" class="btn btn-primary" value="Create" />
                </div>
            }
        </div>
    </div>
</div>


<script type="text/javascript">

    $("#closeDeleteTaskForm").click(function () {
        $("#deleteTaskModal").modal().hide();
        $('#deleteTaskModal').modal('toggle');
});

</script>
