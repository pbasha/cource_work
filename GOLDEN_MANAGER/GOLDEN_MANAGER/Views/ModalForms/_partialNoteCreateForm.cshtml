@using GOLDEN_MANAGER.Models
@model Note
  
   <!-- Modal -->
<div class="modal fade" id="addNoteModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Creating Note</h4>            
    </div>
             
      @using (Ajax.BeginForm("Add", "Note",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.EditorFor(x => x.note_name, new { @class = "form-control"})
                    </div>

                    <div class="form-group">
                        <label>Description:</label>
                        @Html.EditorFor(x => x.note_description, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Priority:</label>
                        @Html.EditorFor(x => x.note_priority, new { @class = "form-control" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeCreateNoteForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type = "text/javascript" >

    $("#closeCreateNoteForm").click(function () {
    $("#addNoteModal").modal().hide();
    $('#addNoteModal').modal('toggle');
});
             
</script>
