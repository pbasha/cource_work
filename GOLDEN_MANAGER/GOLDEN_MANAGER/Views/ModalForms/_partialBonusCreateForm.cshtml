@using GOLDEN_MANAGER.Models
@model Bonus
  
   <!-- Modal -->
<div class="modal fade" id="addBonusModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Creating Bonus</h4>            
    </div>
             
      @using (Ajax.BeginForm("Add", "Bonus",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.EditorFor(x => x.bonus_name, new { @class = "form-control"})
                    </div>

                    <div class="form-group">
                        <label>Description:</label>
                        @Html.EditorFor(x => x.bonus_description, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Points needed:</label>
                        @Html.EditorFor(x => x.bonus_points_must_achieve, new { @class = "form-control" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeCreateBonusForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type = "text/javascript" >

    $("#closeCreateBonusForm").click(function () {
    $("#addBonusModal").modal().hide();
    $('#addBonusModal').modal('toggle');
});
             
</script>
