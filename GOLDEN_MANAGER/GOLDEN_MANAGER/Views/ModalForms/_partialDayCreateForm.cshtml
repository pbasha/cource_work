@model  GOLDEN_MANAGER.Models.Day

   <!-- Modal -->
<div class="modal fade" id="addDayModal" role="dialog">
    <div class="modal-dialog">
         
<!-- Modal content-->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Creating a new Day</h4>            
    </div>
             
      @using (Ajax.BeginForm("Add", "Day",
      new AjaxOptions
      {
          HttpMethod = "POST",
          UpdateTargetId = "right_content_container"
      }))
      {
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label>Name:</label>
                        @Html.TextBoxFor(x => x.day_name, new { @class = "form-control", @placeholder = "Enter the name of this day" })
                    </div>

                    <div class="form-group">
                        <label>Date:</label>
                        @Html.TextBoxFor(x => x.day_date, new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        <label>Description:</label>
                        @Html.TextAreaFor(x => x.day_description, new { @class = "form-control", @placeholder = "Enter the description of this day" })
                    </div>

                </div>

                   <div class="modal-footer">
                       <input id = "closeCreateDayForm" type="submit" class="btn btn-primary" value="Create" />
                   </div>
               }
           </div>
       </div>
   </div>
  
  
<script type="text/javascript">

    $("#closeCreateDayForm").click(function () {
        $("#addDayModal").modal().hide();
        $('#addDayModal').modal('toggle');
});
             
</script>
